<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClasses.Login">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="59dp"
        app:srcCompat="@drawable/logo4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/login_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:text="Şifre" />

    <EditText
        android:id="@+id/login_et_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_logo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName|textEmailAddress" />

    <EditText
        android:id="@+id/login_et_password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_et_email"
        android:layout_marginStart="25dp"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/textView2"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_btn_signin"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_et_password"
        android:layout_alignParentStart="true"
        android:layout_marginStart="255dp"
        android:layout_marginTop="26dp"
        android:text="Giriş Yap" />

    <TextView
        android:id="@+id/login_tw_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_signin"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="83dp"
        android:text="Yeni Hesap Oluştur"
        android:textColor="#2196F3"
        android:textSize="16sp" />
</RelativeLayout>