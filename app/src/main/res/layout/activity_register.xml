<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityClasses.Register">

    <Button
        android:id="@+id/reg_btn_register"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_et_namesurname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="253dp"
        android:layout_marginTop="57dp"
        android:text="Kaydol" />

    <EditText
        android:id="@+id/reg_et_email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reg_logo"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/reg_et_password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reg_et_email"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textView3"
        android:ems="10"
        android:inputType="textPassword"
        android:password="false" />

    <EditText
        android:id="@+id/reg_et_repassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reg_et_password"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:inputType="textPassword"
        android:password="false" />

    <EditText
        android:id="@+id/reg_et_namesurname"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reg_et_repassword"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/reg_logo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="70dp"
        android:text="E-mail" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:text="Şifre" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:text="Şifre Tekrar" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:text="Ad Soyad" />

    <ImageView
        android:id="@+id/reg_logo"
        android:layout_width="154dp"
        android:layout_height="146dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="59dp"
        app:srcCompat="@drawable/minilogo2" />

    <TextView
        android:id="@+id/reg_tw_hasaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_btn_register"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="28dp"
        android:text="Zaten bir hesabım var"
        android:textColor="#2196F3"
        android:textSize="16sp" />
</RelativeLayout>